[Unit]
Description=NeoFS Storage{{ neofs_storage__instance }} node
Requires=network.target

[Service]
Type=simple
ExecStart={{ neofs_storage__bin_path }} -config {{ neofs_storage__conf_dir }}/config.yaml
User={{ neofs_storage__user }}
Group={{ neofs_storage__group }}
Restart=always
RestartSec=5
StandardError=journal
SyslogIdentifier=neofs-storage{{ neofs_storage__instance }}
PrivateTmp=true
WorkingDirectory={{ neofs_storage__data_dir }}

[Install]
WantedBy=multi-user.target
